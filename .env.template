# =============================================================================
# COMPETITIVE INTELLIGENCE V2 - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to '.env' and update with your secure values
# NEVER commit .env files to version control!

# =============================================================================
# CRITICAL SECURITY SETTINGS
# =============================================================================

# JWT Secret Key - MUST be set for production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=

# Environment type (development, staging, production)
ENVIRONMENT=development

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

APP_NAME=Competitive Intelligence v2
APP_VERSION=2.0.0
DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection URL
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://admin:yourpassword@localhost:5432/competitive_intelligence

# =============================================================================
# JWT & AUTHENTICATION SETTINGS
# =============================================================================

# JWT algorithm (recommended: HS256)
ALGORITHM=HS256

# Token expiration times
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=100

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================

SESSION_EXPIRE_HOURS=24
SESSION_REMEMBER_ME_DAYS=30
MAX_SESSIONS_PER_USER=5

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW_MINUTES=15

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# =============================================================================
# EMAIL SETTINGS (Optional - for password reset)
# =============================================================================

SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@competitive-intel.com
SMTP_FROM_NAME=Competitive Intelligence

# =============================================================================
# AI INTEGRATION (Optional - for future features)
# =============================================================================

OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s